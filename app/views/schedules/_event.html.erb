<% if event %>
<div class="event panel panel-default" data-event-id="<%= event.id %>" data-room-id="<%= event.room_id %>">
  <div class="panel-heading">
    <time><%= (event.localized_time if event.time) || "TBA" %></time> <strong><%= event.title %></strong>
  </div>
  <div class="panel-body"> 
    <dl>   
    <% if event.needs %><dt>Needs:</dt><dd><%= event.needs %></dd><% end %>
    <% if event.votes %>
    <dt>Votes</dt>
      <ul>
        <% event.votes.each do |v| %>
          <li><%= content_tag :span, v.vote, class: 'badge' %> <%= v.user.email %></li>
        <% end %>
      </ul>
    </dt>
    <% end %>
  </dl>
    
  </div>
  <div class="panel-footer clearfix">
    <%= link_to 'Edit', edit_schedule_event_path(@schedule, event) %>
    <%= link_to 'Vote', vote_schedule_event_path(@schedule, event), method: 'post', class: 'pull-right' %>
  </div>
</div>
<% end %>
